
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context="com.example.antonio.alphap.NewPallet"
    android:layout_height="wrap_content">
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odabir klase"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="80dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOVA PALETA"
        android:textSize="24sp"
        tools:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />



    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/palletclasses"
        android:orientation='horizontal'
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/AB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="AB    " />

        <RadioButton
            android:id="@+id/CD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="CD    " />

        <RadioButton
            android:id="@+id/ABC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ABC    " />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABCD"
            android:id="@+id/ABCD"
            android:checked="false" />

    </RadioGroup>

    <Button
        android:id="@+id/Back1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Natrag"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Odabir debljine"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/debljinaedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="57dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:text="Odabir duÅ¾ine"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/plankl1"
        android:layout_width="101dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="55dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="17dp"
        android:layout_height="29dp"
        android:text="-"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="344dp"
        android:layout_marginLeft="101dp"
        app:layout_constraintLeft_toLeftOf="@+id/plankl1" />

    <EditText
        android:id="@+id/duzina2"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView8"
        tools:layout_editor_absoluteY="314dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="392dp"
        android:layout_height="42dp"
        android:onClick="Upload"
        android:text="Kreiraj paletu"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/duzina2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>