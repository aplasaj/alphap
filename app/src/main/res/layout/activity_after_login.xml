<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    tools:context="com.example.antonio.alphap.login"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:weightSum="1"><![CDATA[

    android:id="@+id/myrl"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    ]]>

    <Button
        android:id="@+id/signoutbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="KRAJ RADA"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="3dp" />

    <Button
            android:id="@+id/openNewPalletbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="NOVA PALETA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="151dp" />

    <Button
        android:id="@+id/ClosePalbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/OpenedPalletsbtn"
        android:text="Pregled dasaka u paletama" />

    <Button
        android:id="@+id/OpenedPalletsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/openNewPalletbtn"
        android:text="LISTA OTVORENIH PALETA" />

</RelativeLayout>