<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.antonio.alphap.login"><![CDATA[

    android:id="@+id/myrl"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    ]]>

    <Button
        android:id="@+id/signoutbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="KRAJ RADA"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="3dp" />

    <Button
        android:id="@+id/openNewPalletbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:text="NOVA PALETA" />

    <Button
        android:id="@+id/ClosePalbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/OpenedPalletsbtn"
        android:text="Pregled dasaka u paletama" />

    <Button
        android:id="@+id/OpenedPalletsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/openNewPalletbtn"
        android:text="LISTA OTVORENIH PALETA" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text='Ukoliko počinjete rad s novom paletom odaberite opciju "NOVA PALETA"'
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_centerVertical="true"
        android:text='Ukoliko nastavljate rad s paletom koju ste već kreirali u aplikaciji, odaberite opciju "LISTA OTVORENIH PALETA".'
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="INFORMACIJSKI SUSTAV BAGREM"
        android:textColor="@android:color/background_light"
        android:textSize="32sp" />

</RelativeLayout>